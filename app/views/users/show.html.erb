<p id="notice"><%= notice %></p>

<%= image_tag @user.avatar.url(:medium) %>
<h2><%=@user.name%></h2> </br>
<h4><b>Score:</b> <%= @user.score %> </h4>
<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
<div class = "TagsContainer">
	<% @user.related_tags.each do |tag| %>
		<%= link_to tag.name , tag_path(tag)+"?user_id="+"#{@user.id}" ,:class => 'button' %>		
	<% end %>

</div>


<%= button_to "Assigned Incident" ,assigned_incidents_path(@user.id),:method => :get ,:id => 'assignedIncidentButton'  %>
<%= button_to "Created Incidents" ,created_incidents_path(@user.id),:method => :get %>
<%= link_to 'Back', incidents_path %>

